@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Finance Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Finance" name="description" />
    <meta content="Finance" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/FinanceMS/vertical/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/FinanceMS/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/FinanceMS/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/FinanceMS/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>
 
    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="index.html" class="text-dark font-size-22 font-family-secondary">
                                                <b>LOGIN</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Welcome Back!</h1>
                                        <p class="text-muted mb-4">Enter your email address and password to access website.</p>
                                        <div class="text-danger" style=" text-align: left; position: relative; right: 0px; top: -4px;" asp-validation-summary="All"></div>
                                        <form method="post" asp-controller="Account" asp-action="Login" class="user">
                                            <div class="form-group">
                                                <input type="email" asp-for="Email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address">
                                                <span class="text-danger" asp-validation-for="Email"></span>

                                            </div>
                                            <div class="form-group">
                                                <input type="password" asp-for="Password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                                                <span class="text-danger" asp-validation-for="Password"></span>

                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Log In </button>


                                         
                                            
                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Don't have an account? <a href="/Account/Register/" class="text-muted font-weight-medium ml-1"><b>Sign Up</b></a></p>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <!-- jQuery  -->
    <script src="~/FinanceMS/vertical/assets/js/jquery.min.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/waves.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/simplebar.min.js"></script>

    <!-- App js -->
    <script src="~/FinanceMS/vertical/assets/js/theme.js"></script>

</body>

</html>
