@model RegisterDto


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Finance Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Finance" name="description" />
    <meta content="Finance" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/FinanceMS/vertical/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/FinanceMS/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/FinanceMS/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/FinanceMS/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-register rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="index.html" class="text-dark font-size-22 font-family-secondary">
                                                <b>REGISTER
                                                </b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Create an Account!</h1>
                                        <p class="text-muted mb-4">Don't have an account? Create your own account, it takes less than a minute</p>
                                        <form method="post" asp-controller="Account" asp-action="Register" class="user">
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="text" asp-for="Name" class="form-control form-control-user" id="exampleFirstName" placeholder="First Name">
                                                    <span class="text-danger" asp-validation-for="Name"></span>

                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="text" asp-for="Surname" class="form-control form-control-user" id="exampleLastName" placeholder="Last Name">
                                                    <span class="text-danger" asp-validation-for="Surname"></span>

                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" asp-for="Email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address">
                                                <span class="text-danger" asp-validation-for="Email"></span>

                                            </div>
                                            <div class="form-group">
                                                <input type="text" asp-for="Username" class="form-control form-control-user" id="exampleInputEmail" placeholder="Username">
                                                <span class="text-danger" asp-validation-for="Username"></span>

                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="password" asp-for="Password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                                                    <span class="text-danger" asp-validation-for="Password"></span>

                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Repeat Password">
                                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Register Account </button>

                                          
                                            
                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Already have account?  <a href="/Account/Login/" class="text-muted font-weight-medium ml-1"><b>Sign In</b></a></p>
                                            </div> <!-- end col -->
                                        </div>
                                        <!-- end row -->
                                    </div> <!-- end .padding-5 -->
                                </div> <!-- end col -->
                            </div> <!-- end row -->
                        </div> <!-- end .w-100 -->
                    </div> <!-- end .d-flex -->
                </div> <!-- end col-->
            </div> <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->

    <!-- jQuery  -->
    <script src="~/FinanceMS/vertical/assets/js/jquery.min.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/waves.js"></script>
    <script src="~/FinanceMS/vertical/assets/js/simplebar.min.js"></script>

    <!-- App js -->
    <script src="~/FinanceMS/vertical/assets/js/theme.js"></script>

</body>

</html>
