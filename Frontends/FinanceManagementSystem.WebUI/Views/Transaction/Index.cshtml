@model List<GetTransactionsByUserId>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Transactions</h4>
        <p class="card-subtitle mb-4">
            You can perform operations such as adding, deleting, updating transactions on this page.
        </p>
        <a href="/Transaction/CreateTransaction/" class="btn btn-outline-primary">Add New Transaction</a>
        <br />
        <br />
        <table id="basic-datatable" class="table dt-responsive nowrap">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Financial Account</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Delete</th>
                    <th>Update</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <th>@count</th>
                        <td>@item.FinancialAccountName</td>
                        <td>@item.Amount</td>
                        <td>@item.Description</td>
                        <td>@item.TransactionType</td>
                        <td>@item.TransactionDate.ToString("dd MMM, yyyy")</td>
                        <td>
                            <a href="/Transaction/RemoveTransaction/@item.TransactionID" class="btn btn-outline-danger"
                               onclick="return confirm('Are you sure you want to delete this transaction?')">Delete</a>
                        </td>
                        <td><a href="/Transaction/UpdateTransaction/@item.TransactionID" class="btn btn-outline-success">Update</a></td>
                        <td></td>

                    </tr>
                }


            </tbody>
        </table>


    </div>
    <!-- end card-body-->
</div>

