@model UpdateTransactionDto


@{
    ViewData["Title"] = "UpdateTransaction";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update Transaction </h4>
        <p class="card-subtitle mb-4">You can enter the transactions of yours in the box below. After data entry, you can complete the process by clicking the save button.</p>
        <form method="post">
            <input type="hidden" asp-for="TransactionID" />
            <div class="form-group">
                <label for="exampleInputName">Amount</label>
                <input type="number" step="any" class="form-control" id="exampleInputName" asp-for="Amount" placeholder="Please Enter Amount">
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputName">Description</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Description" placeholder="Please Enter Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <select class="form-control" asp-for="FinancialAccountId" asp-items="@ViewBag.FinancialAccounts">
                    <option disabled selected>Please Select Financial Account</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    <option disabled selected>Please Select Transaction Type</option>
                </select>
            </div>

            <div class="form-group">
                <label for="exampleInputName">Transaction Date</label>
                <input type="date" class="form-control" id="exampleInputName" asp-for="TransactionDate" placeholder="Please Enter Transaction Date">
                <span class="text-danger" asp-validation-for="TransactionDate"></span>
            </div>

            <button type="submit" class="btn btn-success waves-effect waves-light">Update</button>
            <a href="/Transaction/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </form>
    </div>
</div>

