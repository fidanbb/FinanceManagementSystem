@model CreateFinancialAccountDto

@{
    ViewData["Title"] = "CreateFinancialAccount";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">New Financial Account Entry</h4>
        <p class="card-subtitle mb-4">You can enter the financial accounts of yours in the box below. After data entry, you can complete the process by clicking the save button.</p>
        <form method="post">
            <input type="hidden" value="@ViewBag.UserId" asp-for="AppUserId" />
            <div class="form-group">
                <label for="exampleInputName">Financial Account Name</label>
                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Please Enter Feature Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputName">Balance</label>
                <input type="number" step="any" class="form-control" id="exampleInputName" asp-for="Balance" placeholder="Please Enter Feature Name">
                <span class="text-danger" asp-validation-for="Balance"></span>
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light">Save</button>
            <a href="/FinancialAccount/Index/" class="btn btn-danger waves-effect waves-light">Cancel</a>
        </form>
    </div>
</div>
